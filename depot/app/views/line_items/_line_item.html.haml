%tr{id: line_item == @current_item ? 'current_item' : ''}
  %td.quantity
    = line_item.quantity
    &times;
  %td
    = line_item.product.title
  %td.item_price
    = number_to_currency(line_item.total_price)
  %td.actions
    = button_to 'V', decrement_line_item_path(line_item), method: :patch, remote: true